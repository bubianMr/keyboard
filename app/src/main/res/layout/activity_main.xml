<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="输入手机号示例"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#333333"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_keyboard" />

    <TextView
        android:id="@+id/tv_keyboard"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="点击弹出安全键盘"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_have_input"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="55dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#333333"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_keyboard"
        android:hint="点击弹出带自带输入框的安全键盘"/>

</androidx.constraintlayout.widget.ConstraintLayout>